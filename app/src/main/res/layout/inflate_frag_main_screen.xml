<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:weightSum="1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="0dp"
        android:id="@+id/civ_groupImage"
        android:layout_margin="8dp"
        android:layout_height="64dp"
        android:layout_weight="0.2"
        android:src="@drawable/login_image"
        app:civ_border_color="@color/colorPrimary"
        app:civ_border_width="2dp"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="0.8"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:minHeight="72dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_groupName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GroupName"
            android:textSize="18dp"
            android:layout_marginTop="6dp"

            fontPath="fonts/Nunito-ExtraBold.ttf"
            tools:ignore="MissingPrefix"/>
        <TextView
            android:id="@+id/tv_eventCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_groupName"
            android:text="Total Events : 5"
            android:textSize="14dp"
            android:layout_marginTop="2dp"
            fontPath="fonts/Nunito-Regular.ttf"
            tools:ignore="MissingPrefix"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_alignParentBottom="true"
            android:background="@android:color/darker_gray"/>

    </RelativeLayout>
</LinearLayout>